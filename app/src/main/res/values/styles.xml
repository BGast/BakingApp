<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MainActivityTextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/cherry_swash</item>

    </style>

    <style name="RecipeDescriptionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#00BCD4</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/cherry_swash</item>
        <item name="android:text">@string/ingredients_header</item>
        <item name="android:contentDescription">@string/ingredients_intro_content_description</item>

    </style>

    <style name="DessertStepShortDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/cherry_swash</item>
        <item name="android:layout_centerInParent">true</item>

    </style>

    <style name="IngredientListV26">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="IngredientList" parent="IngredientListV26">
        <item name="android:layout_marginLeft">@dimen/ingredients_list_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/ingredients_list_horizontal_margin</item>

    </style>

    <style name="RecipeStepDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@id/buttons_step_frame_layout</item>
        <item name="android:layout_below">@id/video_holder_frame_layout</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">@dimen/recipe_instructions_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/recipe_instructions_horizontal_margin</item>

    </style>

</resources>
